<h1>記事一覧</h1>

<% @articles.each do |article| %>
  <div>
    <h3><%= link_to article.title, article_path(article) %></h3>
    <p><%= truncate(article.content, length: 100) %></p>
    <small>作成日: <%= article.created_at.strftime("%Y年%m月%d日") %></small>
  </div>
  <hr>
<% end %>

<% if @articles.empty? %>
  <p>記事がまだありません。</p>
<% end %>
